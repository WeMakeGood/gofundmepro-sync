# GoFundMe Pro (Classy) Sync Configuration
# Copy this file to .env and fill in your actual values

# Classy API Configuration
CLASSY_CLIENT_ID=your_classy_client_id_here
CLASSY_CLIENT_SECRET=your_classy_client_secret_here
CLASSY_API_BASE_URL=https://api.classy.org

# Database Configuration
DB_TYPE=sqlite
# For SQLite (development/small deployments)
DB_PATH=./data/classy.db

# For MySQL (production)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=classy_sync
# DB_USER=sync_user
# DB_PASSWORD=your_secure_password

# Redis Configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_INTERVAL_MINUTES=15
FULL_SYNC_HOUR=2

# MailChimp Integration
MAILCHIMP_API_KEY=your_mailchimp_api_key-dc
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/sync.log

# Node Environment
NODE_ENV=development